@using RG_Store.BLL.ModelVM.ItemVM
@model List<GetAllItemVM>
@{
    ViewData["Title"] = "Home";
}

<h1>Home</h1>

    <section class="bg-position-top-center bg-repeat-0 pt-5"
        style="background-image: url(~/images/hero-bg.png); background-size: 1920px 630px;">
        <div class="container pt-5">
            <div class="row pt-lg-4 pt-xl-5">
                <div class="col-lg-4 col-md-5 pt-3 pt-md-4 pt-lg-5">
                    <h1 class="display-4 text-light pb-2 mb-4 me-md-n5">Enjoy Latest Games Released</h1>
                    <p class="fs-lg text-light opacity-70"> Order , Pay , Enjoy your favorite Games </p>
                </div>
                <div class="col-lg-8 col-md-7 pt-md-5"><img class="d-block mt-4 ms-auto" src="~/images/hero-img.png"
                        width="800" alt="Car"></div>
            </div>
        </div>
        <div class="container mt-4 mt-sm-3 mt-lg-n3 pb-5 mb-md-4">

            <form class="form-group form-group-light d-block">
                <div class="row g-0 ms-lg-n2">
                    <div class="col-lg-2">
                        <div class="input-group border-end-lg border-light"><span
                                class="input-group-text text-muted ps-2 ps-sm-3"><i class="fi-search"></i></span>
                            <input class="form-control" type="text" name="keywords" placeholder="Keywords...">
                        </div>
                    </div>
                    <hr class="hr-light d-lg-none my-2">
                    <div class="col">
                        <div class="dropdown border-end-sm border-light" data-bs-toggle="select">
                            <button class="btn btn-link dropdown-toggle ps-2 ps-sm-3" type="button"
                                data-bs-toggle="dropdown"><i class="fi-list me-2"></i><span
                                    class="dropdown-toggle-label">Genre</span></button>
                            <input type="hidden" name="make">
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" href="#"><span
                                            class="dropdown-item-label">Racing</span></a>
                                </li>
                                <li><a class="dropdown-item" href="#"><span
                                            class="dropdown-item-label">Shooting</span></a>
                                </li>
                                <li><a class="dropdown-item" href="#"><span
                                            class="dropdown-item-label">Sports</span></a>
                                </li>
                                <li><a class="dropdown-item" href="#"><span class="dropdown-item-label">RPG</span></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <hr class="hr-light d-sm-none my-2">
                    <div class="col">
                        <div class="dropdown border-end-md border-light" data-bs-toggle="select">
                            <button class="btn btn-link dropdown-toggle ps-2 ps-sm-3" type="button"
                                data-bs-toggle="dropdown"><i class="fi-list me-2"></i><span
                                    class="dropdown-toggle-label">Price</span></button>
                            <input type="hidden" name="model">
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" href="#"><span class="dropdown-item-label">
                                            <span> Under 2000</span></a>
                                </li>
                                <li><a class="dropdown-item" href="#"><span class="dropdown-item-label">
                                        <span> Under 1500 </span>
                                </a>
                                </li>
                                <li><a class="dropdown-item" href="#"><span class="dropdown-item-label">
                                            <span>Under 1000</span></a>
                                </li>
                                <li><a class="dropdown-item" href="#"><span class="dropdown-item-label">
                                            <span>Under 500</span></a>
                                </li>

                            </ul>
                        </div>
                    </div>
                    <hr class="hr-light d-md-none my-2">
                    <div class="col">
                        <button class="btn btn-primary w-100 makeMeOrangeBG" type="submit">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </section>


    <section class="container pb-5 mb-md-4">
        <div class="row row-cols-2 row-cols-sm-2 row-cols-md-4 row-cols-lg-4 g-2 g-md-4">
            <div class="col">
                <div class="card card-body card-light card-hover bg-transparent border-0 px-0 pt-0 text-center">
                    <img class="d-block mx-auto mb-3" src="~/images/9.png" alt="Sedan"><a
                        class="nav-link-light stretched-link fw-bold" href="#">Racing</a>
                </div>
            </div>

            <div class="col">
                <div class="card card-body card-light card-hover bg-transparent border-0 px-0 pt-0 text-center">
                    <img class="d-block mx-auto mb-3" src="~/images/10.png" alt="SUV"><a
                        class="nav-link-light stretched-link fw-bold" href="#">Shooting</a>
                </div>
            </div>
            <div class="col">
                <div class="card card-body card-light card-hover bg-transparent border-0 px-0 pt-0 text-center">
                    <img class="d-block mx-auto mb-3" src="~/images/11.png" alt="SUV"><a
                        class="nav-link-light stretched-link fw-bold" href="#">Sports</a>
                </div>
            </div>
            <div class="col">
                <div class="card card-body card-light card-hover bg-transparent border-0 px-0 pt-0 text-center">
                    <img class="d-block mx-auto mb-3" src="~/images/12.png" alt="SUV"><a
                        class="nav-link-light stretched-link fw-bold" href="#">RPG</a>
                </div>
            </div>
        </div>
    </section>
    <section class="container pb-5 mb-md-4">
        <div class="d-sm-flex align-items-center justify-content-between mb-3 mb-sm-4 pb-sm-2">
            <h2 class="h3 text-light mb-2 mb-sm-0">Offers</h2><a class="btn btn-link btn-light fw-normal px-0 myHover"
                href="#">Go to Store<i class="fi-arrow-long-right fs-sm mt-0 ps-1 ms-2"></i></a>
        </div>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3  g-2 g-md-4">
            @foreach(var item in Model)
            {
                <!--item-->
                <div>
                    <a class="d-block rounded-3 overflow-hidden" href="#"><img class="d-block"
                            src="images/crash-bandicoot-4-ride-i99518 (2).jpg" alt="Image"></a>

                    <div>
                        <a class="fs-xs text-uppercase text-decoration-none makeMeOrange" href="#">
                            <h4 class=" text-center text-light pt-1">
                            <a class="nav-link" href="#">@item.Name</a>
                            </h4>
                            <p class="d-none d-md-block">
                                @item.Description
                            </p>
                            @if (item.HasOffer == true)
                            {
                            <h3 class="text-center" style="color: #fd390e;">
                            <s style="color: #9691a4 !important;">@item.IntialPrice</s>
                                @item.FinalPrice
                            </h3>
                            }
                            else
                            {
                                <h3 class="text-center" style="color: #fd390e;">
                                    @item.FinalPrice
                                </h3>
                            }
                    </a>
                    <div class="d-flex justify-content-between">
                        <form asp-action="AddToCart" asp-controller="Cart" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="itemId" value="@item.Id" />
                            <button type="submit" class="btn btn-success col">Add to Cart</button>
                        </form>
                        <form asp-action="AddToFavourite" asp-controller="Favourite" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="itemId" value="@item.Id" />
                            <button type="submit" class="btn btn-success col">Add to fav</button>
                        </form>
                            <button type="button" class="btn btn-danger col-3">
                                <i class="fa-solid fa-heart"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <!--item-->
                }
        </div>
    </section>
    <!-- end -->