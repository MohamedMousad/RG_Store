@using RG_Store.BLL.ModelVM.OrderVM
@{
    ViewData["Title"] = "Index";
}
@model List<GetOrderVM>
<style>
    h2 {
        color: orangered;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        max-width: 1000px;
        background-color: #fff;
        border-collapse: collapse;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

        .table thead {
            background-color: #12101a;
            color: #fff !important;
        }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
        }

        .table tbody tr {
            border-bottom: 1px solid #ddd;
        }

            .table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

    .badge {
        padding: 5px 10px;
        border-radius: 12px;
        font-size: 0.85rem;
    }

    .badge-success {
        background-color: #28a745;
        color: white;
    }

    .badge-secondary {
        background-color: #6c757d;
        color: white;
    }

    .badge-warning {
        background-color: #ffc107;
        color: white;
    }

    .action-icons {
        text-align: center;
    }

        .action-icons a {
            margin-right: 10px;
            color: #007bff;
            text-decoration: none;
            font-size: 1.2rem;
        }

            .action-icons a:hover {
                color: #0056b3;
            }

            .action-icons a.delete {
                color: #dc3545;
            }

                .action-icons a.delete:hover {
                    color: #c82333;
                }

    .profile {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        text-align: center;
    }

        .profile img {
            border-radius: 50%;
            margin-bottom: 15px;
            width: 150px;
            height: 150px;
            object-fit: cover;
        }

        .profile h3 {
            margin-bottom: 10px;
            color: #333;
        }

        .profile p {
            margin-bottom: 0;
            color: #777;
        }

</style>

<div class="container pt-5  mt-5 mb-sm-2">
    <!-- Breadcrumb-->
    <nav class="mb-4 pt-md-3" aria-label="Breadcrumb">
        <ol class="breadcrumb breadcrumb-light">
            <li class="breadcrumb-item"><a href="car-finder-home.html">Home</a></li>
            <li class="breadcrumb-item"><a href="car-finder-account-info.html">Account</a></li>
            <li class="breadcrumb-item active" aria-current="page">Password & Security</li>
        </ol>
    </nav>
    <!-- Page content-->
    <div class="row" style="margin-bottom:50px">
        <!-- Sidebar-->
        <aside class="col-lg-4 col-md-5 pe-xl-4 mb-5">
            <!-- Account nav-->
            <div class="card card-body card-light border-0 shadow-sm pb-1 me-lg-1">
                <div class="d-flex d-md-block d-lg-flex align-items-start pt-lg-2 mb-4">
                    <img class="rounded-circle"
                         src="~/images/wagon.svg" width="48" alt="Robert Fox">
                    <div class="pt-md-2 pt-lg-0 ps-3 ps-md-0 ps-lg-3">
                        <h2 class="fs-lg text-light mb-0">RG Store</h2>
                        <ul class="list-unstyled fs-sm mt-3 mb-0">
                            <!-- <li><a class="nav-link-light fw-normal" href="tel:3025550107"><i
                                        class="fi-phone opacity-60 me-2"></i>(302) 555-0107</a></li> -->

                        </ul>
                    </div>
                </div>

                <a class="btn btn-outline-light d-block d-md-none w-100 mb-3" href="#account-nav"
                   data-bs-toggle="collapse"><i class="fi-align-justify me-2"></i>Menu</a>
                <div class="collapse d-md-block mt-3" id="account-nav">
                    <div class="card-nav">
                        <a class="card-nav-link " href="/Account/Profile">
                            <i class="fi-user me-2"></i>Personal Info
                        </a>
                        <a class="card-nav-link " href="/Account/ChangePassword">
                            <i class="fi-lock me-2"></i>Password &amp;
                            Security
                        </a>
                        <a class="card-nav-link active" href="/order/index">
                            <i class="fi-car me-2"></i>My
                            Orders
                        </a>
                        <a class="card-nav-link" href="/Favourite/index">
                            <i class="fi-heart me-2"></i>Wishlist<span class="badge bg-faded-light ms-2">4</span>
                        </a><a class="card-nav-link"
                               href="/Account/LogOut"><i class="fi-logout me-2"></i>Sign Out</a>
                    </div>
                </div>
            </div>
        </aside>
        <!-- Content-->

        <div class="col-lg-8 col-md-7 mb-5" >
            <h1 class="h2 text-light">Your Order History</h1>

            <form class="needs-validation pb-4" novalidate >

                <table class="table" >
                        <thead>
                            <tr>
                            <th scope="col" style="color :white !important;">Order ID</th>
                                <th scope="col" style="color :white !important;" >Order Date</th>
                                <th scope="col" style="color :white !important;" >Total Amount</th>
                                <th scope="col" style="color :white !important;" >Status</th>
                                <th scope="col" style="color :white !important;" >Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.OrderId</th>
                                <td>@item.CreatedOn </td>
                                <td>$120.00</td>
                                <td><span class="badge badge-success">@item.OrderStatus.ToString()</span></td>
                                <td class="action-icons">
                                    <a href="/Order/Edit/1001" class="edit"><i class="fas fa-edit"></i></a>
                                    <a href="/Order/Delete/1001" class="delete"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                            }
                            @* <tr>
                                <th scope="row">1002</th>
                                <td>September 10, 2024</td>
                                <td>$75.50</td>
                                <td><span class="badge badge-secondary">Shipped</span></td>
                                <td class="action-icons">
                                    <a href="/Order/Edit/1002" class="edit"><i class="fas fa-edit"></i></a>
                                    <a href="/Order/Delete/1002" class="delete"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">1003</th>
                                <td>August 30, 2024</td>
                                <td>$200.25</td>
                                <td><span class="badge badge-warning">Processing</span></td>
                                <td class="action-icons">
                                    <a href="/Order/Edit/1003" class="edit"><i class="fas fa-edit"></i></a>
                                    <a href="/Order/Delete/1003" class="delete"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">1003</th>
                                <td>August 30, 2024</td>
                                <td>$200.25</td>
                                <td><span class="badge badge-warning">Processing</span></td>
                                <td class="action-icons">
                                    <a href="/Order/Edit/1003" class="edit"><i class="fas fa-edit"></i></a>
                                    <a href="/Order/Delete/1003" class="delete"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr> *@

                        </tbody>
                    </table>

            </form>
        </div>
    </div>
</div>