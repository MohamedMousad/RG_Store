@{
    ViewData["Title"] = "Index";
}

<style>
    h2 {
        color: orangered;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        max-width: 1000px;
        background-color: #fff;
        border-collapse: collapse;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

        .table thead {
            background-color: wheat;
            color: #fff;
        }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
        }

        .table tbody tr {
            border-bottom: 1px solid #ddd;
        }

            .table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

    .badge {
        padding: 5px 10px;
        border-radius: 12px;
        font-size: 0.85rem;
    }

    .badge-success {
        background-color: #28a745;
        color: white;
    }

    .badge-secondary {
        background-color: #6c757d;
        color: white;
    }

    .badge-warning {
        background-color: #ffc107;
        color: white;
    }

    .action-icons {
        text-align: center;
    }

        .action-icons a {
            margin-right: 10px;
            color: #007bff;
            text-decoration: none;
            font-size: 1.2rem;
        }

            .action-icons a:hover {
                color: #0056b3;
            }

            .action-icons a.delete {
                color: #dc3545;
            }

                .action-icons a.delete:hover {
                    color: #c82333;
                }

    .profile {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        text-align: center;
    }

        .profile img {
            border-radius: 50%;
            margin-bottom: 15px;
            width: 150px;
            height: 150px;
            object-fit: cover;
        }

        .profile h3 {
            margin-bottom: 10px;
            color: #333;
        }

        .profile p {
            margin-bottom: 0;
            color: #777;
        }

</style>
<div class="container pt-5">
    <div class="row pt-lg-4 pt-xl-5">
    </div>
</div>
<section class="container pb-5 mb-md-4" style="height:100vh;">
    <div class="container pt-5">
        <div class="row">
            <!-- User Profile Section -->
            <div class="col-md-4">
                <div class="profile">
                    <img src="https://via.placeholder.com/150" alt="User Image">
                    <h3>John Doe</h3>
                    <p>john.doe@example.com</p>
                </div>
            </div>

            <!-- Order History Table Section -->
            <div class="col-md-8">
