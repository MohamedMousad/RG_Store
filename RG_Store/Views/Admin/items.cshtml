@using RG_Store.BLL.ModelVM.ItemVM
@{
    ViewData["Title"] = "items";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}
@model List<GetAllItemVM>

<div class="head-title">
    <div class="left">
        <h1>Items</h1>
        <ul class="breadcrumb">
            <li>
                <a href="#">Dashboard</a>
            </li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li>
                <a class="active" href="#">Items</a>
            </li>
        </ul>
    </div>
</div>

<div class="table-data">
    <div class="order">
        <div class="head">
            <h3>All Items</h3>
            <li class="list-inline-item">
                <a class="btn btn-primary btn-sm rounded-0" asp-controller="Admin" asp-action="CreateItem" data-toggle="tooltip" data-placement="top" title="Create"><i class="fa fa-table"></i></a>
            </li>
        </div>
        <table class="tablee table-striped">
            <thead>
                <tr>
                    <th style="width: 10%;">ID</th>
                    <th style="width: 40%;">Item Name</th>
                    <th style="width: 30%;">Final Price</th>
                    <th style="width: 20%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.FinalPrice</td>
                        <td>
                            <!-- Call to action buttons -->
                            <ul class="list-inline m-0">
                               
                                <li class="list-inline-item">
                                    <a href="UpdateItem/@item.Id" class="btn btn-success btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Edit">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </li>
                                @if (item.IsDeleted)
                                {
                                    <li class="list-inline-item">
                                        <a href="DeleteItem/@item.Id" class="btn btn-secondary btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Delete">  <i class="fa fa-undo"></i></a>
                                    </li>
                                }
                                else
                                {
                                    <li class="list-inline-item">
                                        <a href="DeleteItem/@item.Id" class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash"></i></a>
                                </li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
                <!-- Add more rows as needed -->
            </tbody>
        </table>
    </div>
</div>
