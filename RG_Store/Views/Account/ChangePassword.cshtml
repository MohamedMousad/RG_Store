@using RG_Store.BLL.ModelVM.UserVM
@model ChangePasswordVM
@{
    ViewData["Title"] = "Change Password";
}
<style>
    * {
        text-decoration: none !important;
    }

    html, body {
        height: 100%;
        margin: 0;
    }

    body {
        display: flex;
        flex-direction: column;
        background-color: #1f1b2d;
    }

    main {
        flex: 1;
    }

    .myHover {
        color: #9691a4 !important;
    }

        .myHover:hover {
            background-color: transparent;
            color: white !important;
        }

    .makeMeOrange {
        color: #fd5631 !important;
    }

        .makeMeOrange:hover {
            color: #fd390e !important;
        }

    .makeMeOrangeBG {
        background-color: #fd5631 !important;
        border: none;
    }

        .makeMeOrangeBG:hover {
            background-color: #fd390e !important;
        }

    .navbar-scrolled {
        background-color: #1f1b2d !important;
    }

    s {
        text-decoration: line-through !important;
    }

    ::placeholder {
        color: #9691a4 !important;
    }

    input {
        color: white !important;
    }

    .socialMediaBG:hover {
        transition-duration: 500ms !important;
        background-color: white !important;
        .socialMedia

    {
        transition-duration: 500ms !important;
        color: #fd5631 !important;
    }




    a:has(.appStore):hover {
        background-color: #fd390e !important;
        color: #fd5631 !important;
    }

    footer {
        background-color: #1f1b2d;
        padding: 10px 0;
        color: white;
        text-align: center;
    }
</style>

<main class="container pt-5 pb-lg-4 mt-5 mb-sm-2">
    <!-- Breadcrumb-->
    <nav class="mb-4 pt-md-3" aria-label="Breadcrumb">
        <ol class="breadcrumb breadcrumb-light">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="account" asp-action="profile">Account</a></li>
            <li class="breadcrumb-item active" aria-current="page">Password & Security</li>
        </ol>
    </nav>

    <!-- Page content-->
    <div class="row">
        <div class="row">
            <!-- Sidebar-->
            <aside class="col-lg-4 col-md-5 pe-xl-4 mb-5">
                <div class="card card-body card-light border-0 shadow-sm pb-1 me-lg-1">
                    <div class="d-flex d-md-block d-lg-flex align-items-start pt-lg-2 mb-4">
                        @if (Model.ProfileImage != null)
                        {
                            <img class="rounded-circle" src="~/uploaded_images/users/@Model.ProfileImage" style="object-fit: cover;  width: 48px" alt="@Model.ProfileImage">
                        }
                        else
                        {
                            <img class="rounded-circle" src="~/images/01.jpg" style="object-fit: cover;  width: 48px" alt="@Model.ProfileImage">
                        }
                        <div class="pt-md-2 pt-lg-0 ps-3 ps-md-0 ps-lg-3">
                            <h2 class="fs-lg text-light mb-0">@Model.UserName</h2>
                            <ul class="list-unstyled fs-sm mt-3 mb-0">
                                <li>
                                    <i class="fi-mail opacity-60 me-2"></i>@Model.Email
                                </li>
                            </ul>
                        </div>
                    </div>
                    <a class="btn btn-outline-light d-block d-md-none w-100 mb-3" href="#account-nav"
                       data-bs-toggle="collapse"><i class="fi-align-justify me-2"></i>Menu</a>
                    <div class="collapse d-md-block mt-3" id="account-nav">
                        <div class="card-nav">
                            <a class="card-nav-link" asp-controller="Account" asp-action="Profile">
                                <i class="fi-user me-2"></i>Personal Info
                            </a>
                            <a class="card-nav-link active" asp-controller="Account" asp-action="ChangePassword">
                                <i class="fi-lock me-2"></i>Password & Security
                            </a>
                            <a class="card-nav-link" asp-controller="Order" asp-action="Index">
                                <i class="fi-car me-2"></i>My Orders
                            </a>
                            <a class="card-nav-link" asp-controller="Favourite" asp-action="index">
                                <i class="fi-heart me-2"></i>Wishlist
                            </a>
                            <a class="card-nav-link" href="/Account/LogOut">
                                <i class="fi-logout me-2"></i>Sign Out
                            </a>
                        </div>
                    </div>
                </div>
            </aside>
            <!-- Content-->
            <div class="col-lg-8 col-md-7 mb-5">
                <h1 class="h2 text-light">Password &amp; Security</h1>
                <p class="text-light pt-1">Manage your password settings and secure your account.</p>
                <h2 class="h5 text-light">Password</h2>
                <form asp-action="ChangePassword" asp-controller="Account" novalidate>
                    <div class="row pt-2">
                        <div class="col-lg-9 col-md-12 col-sm-8 mb-2 mb-m-4">
                            <div class="col-sm-6 mb-2">
                                <label class="form-label text-light" for="account-password">Current password</label>
                                <div class="password-toggle">
                                    <input class="form-control form-control-light" type="password" id="account-password" asp-for="OldPassword" required>
                                    <label class="password-toggle-btn" aria-label="Show/hide password" onclick="togglePassword('account-password', this)">
                                        <i class="fa fa-eye password-toggle-icon"></i>
                                    </label>
                                </div>
                                <div class="col-sm-6 mb-2">
                                    <a class="d-inline-block text-light mb-2" href="/account/ForGotPassWord">Forgot password?</a>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-6 mb-3">
                                    <label class="form-label text-light" for="account-password-new">New password</label>
                                    <div class="password-toggle">
                                        <input class="form-control form-control-light" type="password" asp-for="NewPassword" id="account-password-new" required>
                                        <label class="password-toggle-btn" aria-label="Show/hide password" onclick="togglePassword('account-password-new', this)">
                                            <i class="fa fa-eye password-toggle-icon"></i>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-sm-6 mb-3">
                                    <label class="form-label text-light" for="account-password-confirm">Confirm password</label>
                                    <div class="password-toggle">
                                        <input class="form-control form-control-light" asp-for="ConfirmPassword" type="password" id="account-password-confirm" required>
                                        <label class="password-toggle-btn" aria-label="Show/hide password" onclick="togglePassword('account-password-confirm', this)">
                                            <i class="fa fa-eye password-toggle-icon"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-outline-primary" type="submit">Update password</button>
                        </div>
                </form>
            </div>
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mt-2 text-center">
                @TempData["SuccessMessage"]
            </div>
        }
    </div>
</main>

<script>
    function togglePassword(inputId, iconElement) {
        const input = document.getElementById(inputId);
        const icon = iconElement.querySelector('.password-toggle-icon');

        if (input.type === 'password') {
            input.type = 'text';
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');
        } else {
            input.type = 'password';
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        }
    }
</script>
