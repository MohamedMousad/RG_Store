@using RG_Store.BLL.ModelVM.UserVM
@model ChangePasswordVM
@{
    ViewData["Title"] = "Change Password";
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Profile </title>

    <link rel="stylesheet" media="screen" href="https://finder.createx.studio/css/theme.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" media="screen" href="https://finder.createx.studio/css/theme.min.css">
    <style>
        * {
            text-decoration: none !important;
        }

        body {
            background-color: #1f1b2d;
        }

        .myHover {
            color: #9691a4 !important;
        }

            .myHover:hover {
                background-color: transparent;
                color: white !important;
            }

        .makeMeOrange {
            color: #fd5631 !important;
        }

            .makeMeOrange:hover {
                color: #fd390e !important;
            }

        .makeMeOrangeBG {
            background-color: #fd5631 !important;
            border: none;
        }

            .makeMeOrangeBG:hover {
                background-color: #fd390e !important;
            }

        .navbar-scrolled {
            background-color: #1f1b2d !important;
        }

        s {
            text-decoration: line-through !important;
        }

        ::placeholder {
            color: #9691a4 !important;
        }

        input {
            color: white !important;
        }

        .socialMediaBG:hover {
            transition-duration: 500ms !important;
            background-color: white !important;
            .socialMedia

        {
            transition-duration: 500ms !important;
            color: #fd5631 !important;
        }

        }

        .socialMedia {
            position: relative;
            text-align: center;
            margin-left: auto;
            margin-right: auto;
            right: 100%
        }

        a:has(.appStore):hover {
            background-color: #fd390e !important;
            color: #fd5631 !important;
        }
    </style>


    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const navbar = document.getElementById('navbar');
            const navbarHeight = navbar.offsetHeight;

            window.addEventListener('scroll', function () {
                if (window.scrollY > navbarHeight) {
                    navbar.classList.add('navbar-scrolled');
                } else {
                    navbar.classList.remove('navbar-scrolled');
                }
            });
        });
    </script>

</head>

<body>
    <div class="container pt-5 pb-lg-4 mt-5 mb-sm-2">
        <!-- Breadcrumb-->
        <nav class="mb-4 pt-md-3" aria-label="Breadcrumb">
            <ol class="breadcrumb breadcrumb-light">
                <li class="breadcrumb-item"><a href="car-finder-home.html">Home</a></li>
                <li class="breadcrumb-item"><a href="car-finder-account-info.html">Account</a></li>
                <li class="breadcrumb-item active" aria-current="page">Password & Security</li>
            </ol>
        </nav>
        <!-- Page content-->
        <div class="row">
            <!-- Sidebar-->
            <aside class="col-lg-4 col-md-5 pe-xl-4 mb-5">
                <!-- Account nav-->
                <div class="card card-body card-light border-0 shadow-sm pb-1 me-lg-1">
                    <div class="d-flex d-md-block d-lg-flex align-items-start pt-lg-2 mb-4">
                        <img class="rounded-circle"
                             src="~/images/wagon.svg" width="48" alt="Robert Fox">
                        <div class="pt-md-2 pt-lg-0 ps-3 ps-md-0 ps-lg-3">
                            <h2 class="fs-lg text-light mb-0">Robert Fox</h2>
                            <ul class="list-unstyled fs-sm mt-3 mb-0">
                                <!-- <li><a class="nav-link-light fw-normal" href="tel:3025550107"><i
                                            class="fi-phone opacity-60 me-2"></i>(302) 555-0107</a></li> -->
                              
                            </ul>
                        </div>
                    </div>

                    <a class="btn btn-outline-light d-block d-md-none w-100 mb-3" href="#account-nav"
                       data-bs-toggle="collapse"><i class="fi-align-justify me-2"></i>Menu</a>
                    <div class="collapse d-md-block mt-3" id="account-nav">
                        <div class="card-nav">
                            <a class="card-nav-link active" href="car-finder-account-info.html">
                                <i class="fi-user me-2"></i>Personal Info
                            </a>
                            <a class="card-nav-link" href="car-finder-account-security.html">
                                <i class="fi-lock me-2"></i>Password &amp;
                                Security
                            </a>
                            <a class="card-nav-link" href="car-finder-account-cars.html">
                                <i class="fi-car me-2"></i>My
                                Orders
                            </a>
                            <a class="card-nav-link" href="car-finder-account-wishlist.html">
                                <i class="fi-heart me-2"></i>Wishlist<span class="badge bg-faded-light ms-2">4</span>
                            </a><a class="card-nav-link"
                                   href="signin-dark.html"><i class="fi-logout me-2"></i>Sign Out</a>
                        </div>
                    </div>
                </div>
            </aside>
            <!-- Content-->

            <div class="col-lg-8 col-md-7 mb-5">
                <h1 class="h2 text-light">Password &amp; Security</h1>
                <p class="text-light pt-1">Manage your password settings and secure your account.</p>
                <h2 class="h5 text-light">Password</h2>
                <form class="needs-validation pb-4" novalidate>
                    <div class="row align-items-end mb-2">
                        <div class="col-sm-6 mb-2">
                            <label class="form-label text-light" for="account-password">Current password</label>
                            <div class="password-toggle">
                                <input class="form-control form-control-light" type="password" id="account-password" required>
                                <label class="password-toggle-btn" aria-label="Show/hide password">
                                    <input class="password-toggle-check" type="checkbox"><span class="password-toggle-indicator"></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-2"><a class="d-inline-block text-light mb-2" href="#">Forgot password?</a></div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-6 mb-3">
                            <label class="form-label text-light" for="account-password-new">New password</label>
                            <div class="password-toggle">
                                <input class="form-control form-control-light" type="password" id="account-password-new" required>
                                <label class="password-toggle-btn" aria-label="Show/hide password">
                                    <input class="password-toggle-check" type="checkbox"><span class="password-toggle-indicator"></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <label class="form-label text-light" for="account-password-confirm">Confirm password</label>
                            <div class="password-toggle">
                                <input class="form-control form-control-light" type="password" id="account-password-confirm" required>
                                <label class="password-toggle-btn" aria-label="Show/hide password">
                                    <input class="password-toggle-check" type="checkbox"><span class="password-toggle-indicator"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-outline-primary" type="submit">Update password</button>
                </form>
            </div>
        </div>
    </div>
</body>

</html>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-2 text-center">
        @TempData["SuccessMessage"]
    </div>
}
