@using RG_Store.BLL.ModelVM.VerifyEmailVM
@model VerifyEmailVM


@{
    ViewData["Title"] = "Verify Email";
}

<div class="container mt-5">
    <h2 class="text-center">@ViewData["Title"]</h2>
    
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="VerifyEmail" method="post" class="form-horizontal">
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email Address</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="ConfirmationCode" class="control-label">Confirmation Code</label>
                    <input asp-for="ConfirmationCode" class="form-control" placeholder="Enter confirmation code" />
                    <span asp-validation-for="ConfirmationCode" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 text-center">
                    <input type="submit" value="Submit Code" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
