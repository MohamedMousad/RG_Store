@using static RG_Store.BLL.ModelVM.UserVM.ForgerPasswordVM
@model ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
}
<section class="container pb-5 mb-md-4" style="height:100vh;margin-top:40px;padding:10px;margin-top:80px">
    <div class="container pt-5 pb-5" style="width:60%;border-radius:10px;padding-bottom:10px;">
        <h2>Reset Password</h2>

        <form asp-action="ResetPassword">
            <input type="hidden" asp-for="Email" value="@Model.Email" />
            <input type="hidden" asp-for="Token" value="@Model.Token" />
            <div style="border:white 1px solid; border-radius:10px; padding:20px 0">

            <div class="form-group" style="width:70%;display: block;margin: 15px auto;background-color:#1f1b2d; border : none">
                <label asp-for="Password" class="control-label" style="color:white; padding:4px;margin-bottom:5px;">New Password :</label>
                <input asp-for="Password" class="form-control" type="password" style="color:white !important; background-color:#1f1b2d ;border:white 1px solid;border-radius:10px;" placeholder="Enter The New Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group" style="width:70%;display: block;margin: 15px auto;background-color:#1f1b2d; border : none">
                <label asp-for="ConfirmPassword" class="control-label" style="color:white; padding:4px;margin-bottom:5px;">Confirm New Password</label>
                <input asp-for="ConfirmPassword" class="form-control" style="color:white !important; background-color:#1f1b2d ;border:white 1px solid;border-radius:10px;" placeholder="Confarim The Password" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div style="margin-bottom:10px;">
                <button type="submit" class="btn btn-primary" style="width:50%;display: block; margin: 0 auto;padding: 10px 20px;">
                    Reset Password
                </button>
            </div>
            </div>
        </form>

    </div>
</section>
