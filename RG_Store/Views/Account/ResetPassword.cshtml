@using static RG_Store.BLL.ModelVM.UserVM.ForgerPasswordVM
@model ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
}

<h2>Reset Password</h2>

<form asp-action="ResetPassword">
    <input type="hidden" asp-for="Email" value="@Model.Email" />
    <input type="hidden" asp-for="Token" value="@Model.Token" />

    <div class="form-group">
        <label asp-for="Password" class="control-label">New Password</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label">Confirm New Password</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Reset Password</button>
    </div>
</form>
