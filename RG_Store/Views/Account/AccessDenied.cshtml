@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure you're using the correct layout path
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Access Denied - RG Store</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #1f1b2d;
            color: white;
        }

        .access-denied-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 80vh; /* Adjust height as necessary */
        }

        .access-denied-card {
            background-color: #2b273c;
            padding: 30px;
            border-radius: 10px;
            text-align: center;
            max-width: 500px;
            width: 100%;
        }

            .access-denied-card h1 {
                color: #fd5631; /* Use your theme color */
                margin-bottom: 20px;
            }

            .access-denied-card p {
                margin-bottom: 30px;
            }

            .access-denied-card .btn {
                color: #fff;
            }

                .access-denied-card .btn:hover {
                    color: #fff;
                    background-color: #fd390e; /* Slightly darker on hover */
                }
    </style>
</head>
<body>
    <div class="access-denied-container">
        <div class="access-denied-card">
            <h1><i class="fas fa-exclamation-triangle"></i> Access Denied</h1>
            <p>Sorry, you do not have permission to access this page.</p>
            <a href="~/Account/Login" class="btn btn-primary makeMeOrangeBG">Go to Login</a>
            <a href="~/Home/Index" class="btn btn-secondary myHover">Go to Home</a>
        </div>
    </div>
</body>
</html>
