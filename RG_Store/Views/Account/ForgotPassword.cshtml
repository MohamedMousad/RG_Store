@{
    ViewData["Title"] = "Forgot Password";
}

<style>
    body {
        background-color: #1f1b2d;
        color: #fff;
        font-family: Arial, sans-serif;
    }

    .card-container {
        background-color: #2d2638;
        border-radius: 10px;
        padding: 2rem;
        max-width: 500px;
        margin: 5rem auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }

    .card-header {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
        color: #fd5631;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #fd5631;
        background-color: #3a3348;
        color: #fff;
    }

        .form-control::placeholder {
            color: #9691a4;
        }

    .btn-primary {
        background-color: #fd5631;
        border: none;
        border-radius: 5px;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #fd390e;
        }

    .alert-info {
        background-color: #2d2638;
        border: 1px solid #fd5631;
        color: #fff;
        margin-top: 1rem;
    }

        .alert-info .alert-heading {
            color: #fd5631;
        }
</style>
<div style="height:100vh; margin-top: 100px">
<section class="card-container">
    <div class="card-header">Forgot Password</div>
    <form asp-action="ForgotPassword" method="post">
        <div class="mb-3">
            <label for="email" class="form-label" style="color:white">Email Address</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required />
        </div>
        <button type="submit" class="btn btn-primary">Send Password Reset Link</button>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info mt-3">
            <h4 class="alert-heading">Info</h4>
            @ViewBag.Message
        </div>
    }
</section>
</div>
