﻿@using RG_Store.BLL.ModelVM.ItemVM
@model List<GetAllItemVM>
@{
    decimal sum = 0;
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="h-100 gradient-custom" style="margin: 20px;">
    <div class="container py-5">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">My Wishlist</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model)
                        {
                            <!-- Single item -->
                            <div class="row">
                                <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                    <!-- Image -->
                                    <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                        <img src="~/images/crash-bandicoot-4-ride-i99518 (2).jpg"
                                             class="w-100" alt="CrashBandicate" />
                                        <a href="#!">
                                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                        </a>
                                    </div>
                                    <!-- Image -->
                                </div>

                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                    <!-- Data -->
                                    <p><strong>@item.Name</strong></p>
                                    <p>Description</p>
                                    <p>@item.Description</p>
                                    <form asp-controller="Favourite" asp-action="RemoveFromFavourite">
                                        <input type="hidden" name="itemId" value="@item.Id" />
                                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-sm me-1 mb-2" data-mdb-tooltip-init
                                                title="Remove item">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                    <!-- Removed wishlist icon here -->
                                </div>

                                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0 d-flex align-items-end justify-content-center">
                                    <!-- Price -->
                                    <p class="text-center" style="color: orangered;font-size:17px; margin-bottom: 30px;">
                                        <strong>Price: @item.FinalPrice</strong>
                                    </p>
                                    <!-- Price -->
                                </div>
                            </div>
                            <!-- Single item -->
                        }

                        <hr class="my-4" />

                    </div>
                </div>
            </div>

            @* counting total price *@
            @foreach (var item in Model)
            {
                sum += item.FinalPrice;
            }

        </div>
    </div>
</section>
