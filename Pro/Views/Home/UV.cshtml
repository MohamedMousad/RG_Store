@model IEnumerable<Pro.ViewModel.CreateOrder>
@{
    ViewData["Title"] = "User";
}
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <style>
        h1 {
            color: #2f4f4f;
            font-size: 30px;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        th {
            background: #f4f4f4;
        }

        tr:nth-child(even) {
            background: #f4f4f4;
        }

        button {
            padding: 10px 15px;
            background-color: #4CAF50;
            color: white;
            display: inline-block;
            cursor: pointer;
            border: none;
        }

        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1>User</h1>
    <form action="/search" method="get">
        <input type="search" name="username" />
        <button asp-action="V" type="submit">Search</button>
    </form>
    <form>
        <button asp-action="userlogin">Logout</button>
    </form>
    <hr />
    @if (Model == null || !Model.Any())
    {
        <p>No orders available.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>User Name</th>
                    <th>User Address</th>
                    <th>User Phone</th>
                    <th>User Gender</th>
                    <th>Order Date</th>
                    <th>Order Cost</th>
                    <th>Delivery Date</th>
                    <th>Item ID</th>
                    <th>Item Name</th>
                    <th>Item Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.userid</td>
                        <td>@order.username</td>
                        <td>@order.useraddress</td>
                        <td>@order.userphone</td>
                        <td>@order.usergender</td>
                        <td>@order.orederDate</td>
                        <td>@order.orderCost</td>
                        <td>@order.orderDeliveryDate</td>
                        <td>@order.itemid</td>
                        <td>@order.itemName</td>
                        <td>@order.itemPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</body>
</html>
